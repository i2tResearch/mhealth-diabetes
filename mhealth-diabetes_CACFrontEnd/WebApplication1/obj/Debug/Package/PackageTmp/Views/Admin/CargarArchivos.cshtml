<div>
    <div class="gray-content">


        <div class="header">
            <span>Paso 1</span>
            <h2>Carga de archivos</h2>
        </div>
        <div id="drag-n-drop" class="body">
            <div class="view centered">
                <h4 id="label-excel">Seleccione un archivo CSV o Excel para cargarlo</h4>
                <div class="file">
                    <span id="file-name">Cargar archivo</span>
                    <label for="file" class="custom-file-upload">Examinar</label>
                    <input id="file" type="file" accept=".xlsx, .csv, application/vnd.ms-excel, application/vnd.openxmlformats-officedocument.spreadsheetml.sheet, application/x-zip-compressed" />
                </div>
                <a href="@Url.Content("~/Content/Example/Archivo_Ejemplo_CAC_2017.csv")">Descargar un archivo de ejemplo</a>
            </div>
        </div>
        <div class="footer">

            <a href="#" id="siguiente-carga-archivos" class="custom-btn">Siguiente</a>
        </div>
    </div>

</div>
