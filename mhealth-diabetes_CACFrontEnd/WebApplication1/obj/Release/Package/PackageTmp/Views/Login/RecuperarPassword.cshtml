@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">
<head>
    <style>
        #snackbar {
            opacity: 0;
            background-color: #333; /* Black background color */
            color: #fff; /* White text color */
            text-align: center; /* Centered text */
            border-radius: 2px; /* Rounded borders */
            padding: 16px; /* Padding */
            position: fixed; /* Sit on top of the screen */
            z-index: 1; /* Add a z-index if needed */
            bottom: 15px;
        }
    </style>

    <script src="https://www.gstatic.com/firebasejs/3.7.1/firebase.js"></script>
    <script>
		  // Initialize Firebase
        var config = {
            apiKey: "@CACWeb.Properties.Resources.FIREBASE_API_KEY",
            authDomain: "@CACWeb.Properties.Resources.FIREBASE_AUTH_DOMAIN",
            databaseURL: "@CACWeb.Properties.Resources.FIREBASE_DATABASE_URL",
            storageBucket: "@CACWeb.Properties.Resources.FIREBASE_STORAGE_BUCKET",
            messagingSenderId: "@CACWeb.Properties.Resources.FIREBASE_MESSAGING_SENDER_ID"
        };
		  firebase.initializeApp(config);
    </script>
    <script type="text/javascript" src="~/js/jquery-1.11.3.js"></script>
    <script type="text/javascript" src="~/js/recuperar-password.js"></script>

    <meta charset="UTF-8">
    <title>Chugar | Login</title>
    <meta name="viewport" content="width=device-width, user-scalable=no, initial-scale=1.0, maximum-scale=1.0, minimum-scale=1.0">
    <link href="https://fonts.googleapis.com/css?family=Raleway:300i,400,400i,500i,600i,700i,800i" rel="stylesheet">
    <link rel="stylesheet" type="text/css" href="~/css/login.css">
</head>
<body>
    <div id="snackbar"></div>
    <div class="login-container">
        <div class="logo">
            <h1 class="title">chugar</h1>
            <div class="subtitle">web</div>
        </div>

        <input type="text" name="usuario" placeholder="Usuario" id="usuario_recuperar">

        <div class="flexed-row">
            <a href="/Login">Regresar</a>
        </div>
        <a href="#" id="recuperar-password">Recuperar Contraseña</a>
    </div>
</body>
</html>


